{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2021"],
    "jsx": "react",
    "declaration": true,
    "sourceMap":true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict":false,
    "paths": {
      "@root/*":["./*"],      
      "@src/*":["./src/*"]      
    },
    "baseUrl": "."
  },
  "include": ["src", "tests", "mocks", "index.ts"],
  "exclude": ["node_modules"]  
}
